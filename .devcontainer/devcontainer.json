{
  "name": "Gamebot Dev Container",
  "dockerFile": "Dockerfile",
  "context": "..",

  // Mount the repo at /workspace (single authoritative mount)
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
  "workspaceFolder": "/workspace",

  // Make Docker read the .env from the host (no hardcoding)
  "runArgs": [
    "--env-file", "${localWorkspaceFolder}/.env"
  ],

  "remoteUser": "vscode",

  "postCreateCommand": "pipenv install --dev && pipenv run pre-commit install && pipenv run python -m ipykernel install --user --name gamebot",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "python.pythonPath": "/usr/local/bin/python",
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.formatting.provider": "black",
        "python.terminal.activateEnvironment": false,
        "python.dataScience.jupyterServerURI": "local"
      }
    }
  }
}
